nextflow_workflow {

    name "Test Workflow PROCESS_READS"
    script "workflows/process_reads.nf"
    workflow "PROCESS_READS"

    test("PROCESS_READS trims reads by default -- cutadapt.") {
        // instantiate helper objects
        def readsSELane1 = new ReadsSELane1()
        def readsSELane2 = new ReadsSELane2()
        def readsPELane1 = new ReadsPELane1()
        def readsPELane2 = new ReadsPELane2()

        when {
            params {
                publishDirReports = "${outputDir}/reports"
                publishDirData    = "${outputDir}/data"
            }
            workflow {
                """
                input[0] = Channel.of(
                    [
                        [
                            sampleName:   "${readsSELane1.getSampleName()}",
                            sampleNumber: "${readsSELane1.getSampleNumber()}",
                            lane:         "${readsSELane1.getLane()}",
                            readType:     "${readsSELane1.getReadType()}"
                        ],
                        file("${projectDir}/${readsSELane1.getR1()}"),
                        file("${projectDir}/${readsSELane1.getR2()}")
                    ],
                    [
                        [
                            sampleName:   "${readsSELane2.getSampleName()}",
                            sampleNumber: "${readsSELane2.getSampleNumber()}",
                            lane:         "${readsSELane2.getLane()}",
                            readType:     "${readsSELane2.getReadType()}"
                        ],
                        file("${projectDir}/${readsSELane2.getR1()}"),
                        file("${projectDir}/${readsSELane2.getR2()}")
                    ],
                    [
                        [
                            sampleName:   "${readsPELane1.getSampleName()}",
                            sampleNumber: "${readsPELane1.getSampleNumber()}",
                            lane:         "${readsPELane1.getLane()}",
                            readType:     "${readsPELane1.getReadType()}"
                        ],
                        file("${projectDir}/${readsPELane1.getR1()}"),
                        file("${projectDir}/${readsPELane1.getR2()}")
                    ],
                    [
                        [
                            sampleName:   "${readsPELane2.getSampleName()}",
                            sampleNumber: "${readsPELane2.getSampleNumber()}",
                            lane:         "${readsPELane2.getLane()}",
                            readType:     "${readsPELane2.getReadType()}"
                        ],
                        file("${projectDir}/${readsPELane2.getR1()}"),
                        file("${projectDir}/${readsPELane2.getR2()}")
                    ],
                )
                input[1] = file("${projectDir}/assets/NO_FILE")
                input[2] = 'cutadapt'
                input[3] = false
                """
            }
        }

        then {
            // test workflow status
            assert workflow.success
            assert workflow.trace.succeeded().size() == 4

            // test read trimming and concatenation
            with(workflow.out.reads_pre_align) {
                assert size() == 4
                with(get(0)) {
                    assert size() == 3
                    assert get(1) ==~ /^.*\/${readsSELane1.getStemName()}_trimmed_R1\.fastq\.gz/
                    assert get(2) ==~ /^.*\/${readsSELane1.getStemName()}_trimmed_R2\.NOFILE/
                }
                with(get(1)) {
                    assert size() == 3
                    assert get(1) ==~ /^.*\/${readsSELane2.getStemName()}_trimmed_R1\.fastq\.gz/
                    assert get(2) ==~ /^.*\/${readsSELane2.getStemName()}_trimmed_R2\.NOFILE/
                }
                with(get(2)) {
                    assert size() == 3
                    assert get(1) ==~ /^.*\/${readsPELane1.getStemName()}_trimmed_R1\.fastq\.gz/
                    assert get(2) ==~ /^.*\/${readsPELane1.getStemName()}_trimmed_R2\.fastq\.gz/
                }
                with(get(3)) {
                    assert size() == 3
                    assert get(1) ==~ /^.*\/${readsPELane2.getStemName()}_trimmed_R1\.fastq\.gz/
                    assert get(2) ==~ /^.*\/${readsPELane2.getStemName()}_trimmed_R2\.fastq\.gz/
                }
            }
            assert snapshot(workflow.out.reads_pre_align).match()

            // test read trimming log
            with(workflow.out.trim_log) {
                assert size() == 4
                assert get(0) ==~ /^.*\/${readsSELane1.getStemName()}_cutadapt-log\.txt/
                assert get(1) ==~ /^.*\/${readsSELane2.getStemName()}_cutadapt-log\.txt/
                assert get(2) ==~ /^.*\/${readsPELane1.getStemName()}_cutadapt-log\.txt/
                assert get(3) ==~ /^.*\/${readsPELane2.getStemName()}_cutadapt-log\.txt/
            }
        }
    }


